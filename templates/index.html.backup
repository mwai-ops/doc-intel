<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PDF Content Extractor</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --secondary: #8b5cf6;
            --background: #0f172a;
            --surface: #1e293b;
            --surface-light: #334155;
            --text: #f1f5f9;
            --text-secondary: #94a3b8;
            --success: #10b981;
            --error: #ef4444;
            --border: #475569;
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, var(--background) 0%, #1e293b 100%);
            min-height: 100vh;
            color: var(--text);
            padding: 2rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .header p {
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

        .upload-section {
            background: var(--surface);
            border-radius: 1rem;
            padding: 2.5rem;
            margin-bottom: 2rem;
            border: 1px solid var(--border);
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        .drop-zone {
            border: 2px dashed var(--border);
            border-radius: 0.75rem;
            padding: 3rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: var(--background);
        }

        .drop-zone:hover,
        .drop-zone.dragover {
            border-color: var(--primary);
            background: rgba(99, 102, 241, 0.05);
        }

        .drop-zone-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.6;
        }

        .drop-zone-text {
            font-size: 1.1rem;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }

        .file-info {
            display: none;
            margin-top: 1rem;
            padding: 1rem;
            background: var(--surface-light);
            border-radius: 0.5rem;
            align-items: center;
            gap: 1rem;
        }

        .file-info.active {
            display: flex;
        }

        .file-icon {
            font-size: 2rem;
        }

        .file-details {
            flex: 1;
        }

        .file-name {
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .file-size {
            font-size: 0.9rem;
            color: var(--text-secondary);
        }

        .format-selection {
            margin-top: 2rem;
        }

        .format-selection h3 {
            margin-bottom: 1rem;
            color: var(--text);
        }

        .format-options {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .format-option {
            position: relative;
        }

        .format-option input {
            position: absolute;
            opacity: 0;
        }

        .format-option label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: var(--background);
            border: 2px solid var(--border);
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .format-option input:checked+label {
            background: var(--primary);
            border-color: var(--primary);
            color: white;
        }

        .format-option label:hover {
            border-color: var(--primary);
        }

        .extract-btn {
            width: 100%;
            margin-top: 2rem;
            padding: 1rem 2rem;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            border-radius: 0.75rem;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
        }

        .extract-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.6);
        }

        .extract-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .results-section {
            display: none;
        }

        .results-section.active {
            display: block;
        }

        .result-card {
            background: var(--surface);
            border-radius: 1rem;
            padding: 2rem;
            text: 'Plain Text',
                markdown: 'Markdown',
                json: 'JSON'
        }

        ;

        const formatIcons= {
            text: 'ðŸ“',
                markdown: 'ðŸ“‹',
                json: 'ðŸ”§'
        }

        ;

        Object.entries(results).forEach(([format, content])=> {
                const card=document.createElement('div');
                card.className='result-card';

                const displayContent=format==='json' ? JSON.stringify(content, null, 2) : content;

                card.innerHTML=` <div class="result-header" > <div class="result-title" > $ {
                    formatIcons[format]
                }

                $ {
                    formatNames[format]
                }

                </div> <button class="copy-btn" onclick="copyToClipboard('${format}', this)" > ðŸ“‹ Copy </button> </div> <div class="result-content" id="content-${format}" >$ {
                    escapeHtml(displayContent)
                }

                </div> `;

                resultsContainer.appendChild(card);
            });

        resultsSection.classList.add('active');
        }

        function escapeHtml(text) {
            const div=document.createElement('div');
            div.textContent=text;
            return div.innerHTML;
        }

        async function copyToClipboard(format, btn) {
            const content=document.getElementById(`content-$ {
                    format
                }

                `).textContent;

            try {
                await navigator.clipboard.writeText(content);
                const originalText=btn.innerHTML;
                btn.innerHTML='âœ“ Copied!';
                btn.classList.add('copied');

                setTimeout(()=> {
                        btn.innerHTML=originalText;
                        btn.classList.remove('copied');
                    }

                    , 2000);
            }

            catch (error) {
                showError('Failed to copy to clipboard');
            }
        }

        function showError(message) {
            errorMessage.textContent=message;
            errorMessage.classList.add('active');
        }

        </script></body></html>